
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
<title><%= titlePage %></title>
<%- include('../includes/menu.ejs')%>
<main>
    <% if (onPage.length > 0) { %>
        <% for (let item of onPage ) { %>
        <section class="container-shop">
            <div class="card-product">
                <header class="card-header">
                    <h1 class="card-header__h1">
                        <%= item.name %>
                    </h1>
                </header>
                <div class="card-img">
                    <img src="https://cdn.pixabay.com/photo/2020/06/07/00/07/computer-5268574_960_720.jpg" alt="">
                </div>
                <div class="card-content">
                    <h2 class="product-price">
                      <%= item.price %> PLN
                    </h2>
                    <p class="product-description__p1">Opis</p>
                    <p class="product-description__p2">
                        <%= item.description %>
                    </p>
                    <div class="card-action">
                        <button class="card__action--btn">add to cart</button>
                    </div>
                </div>
            </div>
        </section>
        <% } %>
    <% } else { %>
        <h1>out of stock</h1>
    <% } %>
</main>

<%- include('../includes/end.ejs')%>